{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "eqeqeq": "off",
        "curly": "error",
        "indent": ["error", 2],
        "prefer-destructuring": ["error", {
          "array": true,
          "object": true
        }, {
          "enforceForRenamedProperties": false
        }],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    }
}